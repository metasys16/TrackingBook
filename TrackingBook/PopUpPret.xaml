<Page x:Class="TrackingBook.PopUpPret"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackingBook"
        mc:Ignorable="d"
      Background="White"
        Title="PopUpPret" Height="165" Width="425">
    <StackPanel>
    <WrapPanel HorizontalAlignment="Center" ItemHeight="112">
            <TextBlock Margin="0,2,0,0" VerticalAlignment="Center" FontSize="20">Voulez-vous effectué ce prêt ?</TextBlock>
    </WrapPanel>
        <StackPanel>
            <WrapPanel HorizontalAlignment="Right" Margin="0,0,5,0">
                <StackPanel>
                    <Button x:Name="BoutonOk" Click="btnOk_Click"
                        Margin="0,0,10,0" Content="OK" Width="50"/>
                </StackPanel>
                <StackPanel>
                    <Button x:Name="BoutonAnnuler" Click="btnAnnuler_Click"
                       Content="ANNULER"/>
                </StackPanel>
            </WrapPanel>

        </StackPanel>
    </StackPanel>
</Page>
