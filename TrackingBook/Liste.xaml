<Page x:Class="TrackingBook.Liste"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackingBook"
        mc:Ignorable="d"
        Title="Liste" Height="640" Width="950">
    <Grid>
        <ListView Margin="10" Name="listeLivres">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Titre" Width="270" DisplayMemberBinding="{Binding Titre}" />
                    <GridViewColumn Header="Auteur" Width="250" DisplayMemberBinding="{Binding Auteur}" />
                    <GridViewColumn Header="Genre" Width="155" DisplayMemberBinding="{Binding Genre}" />
                    <GridViewColumn Header="Date d'ajout" Width="155" DisplayMemberBinding="{Binding DateAjout}" />
                    <GridViewColumn Header="Disponibilité" Width="90" DisplayMemberBinding="{Binding Disponibilite}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
