<Page x:Class="TrackingBook.AjoutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingBook"
      mc:Ignorable="d" 
     d:DesignHeight="640" d:DesignWidth="1366"
      Background="White"
      Title="AjoutPage">

    <StackPanel Margin="0,0,0,96">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"></ColumnDefinition>
                <ColumnDefinition Width="0.7*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Height="640">
                <Frame Name="tierPage" Source="Liste.xaml" />
            </Grid>

            <Grid Grid.Column="1" Grid.Row="0" Height="640">
                <Frame Name="deuxTierPage" Source="ajoutLivre.xaml"/>
            </Grid>
        </Grid>
    </StackPanel>
</Page>
